<Window x:Name="WindowMain" x:Class="SteelWire.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:appCode="clr-namespace:SteelWire.AppCode"
        xmlns:converter="clr-namespace:SteelWire.AppCode.Converter"
        xmlns:validationRule="clr-namespace:SteelWire.AppCode.ValidationRule"
        xmlns:windowData="clr-namespace:SteelWire.WindowData"
        MinWidth="800" MinHeight="600" Width="1350" Height="720" WindowStartupLocation="CenterScreen"
        Icon="/SteelWire;component/Resources/Images/Icon.ico" ContentRendered="WindowRendered" Closing="WindowOnClosing">
    <Window.Title>
        <MultiBinding Converter="{StaticResource WindowTitleConverter}">
            <Binding Source="{StaticResource AppTitle}"/>
            <Binding Source="  1.1  "/>
            <Binding Source="{StaticResource Welcome}"/>
            <Binding Path="UserDisplay.ItemValue" Source="{x:Static windowData:Main.Data}"/>
        </MultiBinding>
    </Window.Title>
    <Window.Resources>
        <x:Static x:Key="WindowData" Member="windowData:Main.Data"></x:Static>
        <converter:TimeMeterTextConverter x:Key="TimeMeterConverter" />
        <converter:CurrentConfigItemTextConverter x:Key="CurrentConfigValueConverter" />
        <converter:ReadOnlyResultTextConverter x:Key="ReadOnlyResultValueConverter" />
        <converter:CurrentConfigItemForeColorConverter x:Key="CurrentConfigForeColorConverter" />
        <converter:CumulationItemForeColorConverter x:Key="CumulationForeColorConverter" />
        <!--<Style TargetType="{x:Type MenuItem}">
            <Setter Property="Background" Value="White"></Setter>
            <Style.Triggers>
                <Trigger Property="MenuItem.IsSubmenuOpen" Value="true">
                    <Setter Property="Background" Value="Red"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>-->
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Background" Value="Red" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="BorderThickness" Value="0"></Setter>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self},Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type ListViewItem}" x:Key="ListViewItemContainerStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border BorderThickness="0" >
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <ControlTemplate x:Key="ListViewTemplate" TargetType="{x:Type ListView}">
            <WrapPanel>
                <ItemsPresenter />
            </WrapPanel>
        </ControlTemplate>
        <DataTemplate x:Key="ListViewItemTemplate">
            <DockPanel Width="280" Margin="40,0,0,0">
                <Grid DockPanel.Dock="Left" Width="10">
                    <Image Source="..\Resources\Images\DrillLeft.png" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                </Grid>
                <Grid DockPanel.Dock="Right" Width="10">
                    <Image Source="..\Resources\Images\DrillRight.png" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                </Grid>
                <StackPanel>
                    <Grid>
                        <Label x:Name="LblName" HorizontalAlignment="Center" FontWeight="Bold">
                            <Label.Content>
                                <Binding Path="LocalName.ItemValue" Mode="OneWay" />
                            </Label.Content>
                        </Label>
                    </Grid>
                    <WrapPanel Margin="0,10,0,0">
                        <Grid Width="75" Margin="0,0,5,0">
                            <Label x:Name="LblWeight" HorizontalAlignment="Right">
                                <Label.Content>
                                    <Binding Path="WeightTitle" Mode="OneWay" />
                                </Label.Content>
                            </Label>
                        </Grid>
                        <TextBox x:Name="TxtWeight" Width="120" MaxLength="10"
                             InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                            <TextBox.Text>
                                <Binding Path="Weight.ItemValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                         Converter="{StaticResource CurrentConfigValueConverter}">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Label Content="{StaticResource LblUnitKilogramPerMetre}" />
                    </WrapPanel>
                    <WrapPanel Margin="0,10,0,0">
                        <Grid Width="75" Margin="0,0,5,0">
                            <Label x:Name="LblLength" HorizontalAlignment="Right">
                                <Label.Content>
                                    <Binding Path="LengthTitle" Mode="OneWay" />
                                </Label.Content>
                            </Label>
                        </Grid>
                        <TextBox x:Name="Txtength" Width="120" MaxLength="10"
                             InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                            <TextBox.Text>
                                <Binding Path="Length.ItemValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                         Converter="{StaticResource CurrentConfigValueConverter}">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Label Content="{StaticResource LblUnitMetre}" />
                    </WrapPanel>
                </StackPanel>
            </DockPanel>
        </DataTemplate>
        <DataTemplate x:Key="ListViewItemTemplate2">
            <DockPanel Width="280" Margin="40,0,0,0">
                <Grid DockPanel.Dock="Left" Width="10">
                    <Image Source="..\Resources\Images\DrillLeft2.png" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                </Grid>
                <Grid DockPanel.Dock="Right" Width="10">
                    <Image Source="..\Resources\Images\DrillRight2.png" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                </Grid>
                <StackPanel>
                    <Grid>
                        <Label x:Name="LblName" HorizontalAlignment="Center" FontWeight="Bold">
                            <Label.Content>
                                <Binding Path="LocalName.ItemValue" Mode="OneWay" />
                            </Label.Content>
                        </Label>
                    </Grid>
                    <WrapPanel Margin="0,10,0,0">
                        <Grid Width="75" Margin="0,0,5,0">
                            <Label x:Name="LblWeight" HorizontalAlignment="Right">
                                <Label.Content>
                                    <Binding Path="WeightTitle" Mode="OneWay" />
                                </Label.Content>
                            </Label>
                        </Grid>
                        <TextBox x:Name="TxtWeight" Width="120" MaxLength="10"
                             InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                            <TextBox.Text>
                                <Binding Path="Weight.ItemValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                         Converter="{StaticResource CurrentConfigValueConverter}">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Label Content="{StaticResource LblUnitKilogramPerMetre}" />
                    </WrapPanel>
                    <WrapPanel Margin="0,10,0,0">
                        <Grid Width="75" Margin="0,0,5,0">
                            <Label x:Name="LblLength" HorizontalAlignment="Right">
                                <Label.Content>
                                    <Binding Path="LengthTitle" Mode="OneWay" />
                                </Label.Content>
                            </Label>
                        </Grid>
                        <TextBox x:Name="TxtLength" Width="120" MaxLength="10"
                             InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                            <TextBox.Text>
                                <Binding Path="Length.ItemValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                         Converter="{StaticResource CurrentConfigValueConverter}">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Label Content="{StaticResource LblUnitMetre}" />
                    </WrapPanel>
                    <WrapPanel Margin="0,10,0,0">
                        <Grid Width="75" Margin="0,0,5,0">
                            <Label x:Name="LblStandLength" HorizontalAlignment="Right">
                                <Label.Content>
                                    <Binding Path="StandLengthTitle" Mode="OneWay" />
                                </Label.Content>
                            </Label>
                        </Grid>
                        <TextBox x:Name="TxtStandLength" Width="120" MaxLength="10"
                             InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                            <TextBox.Text>
                                <Binding Path="StandLength.ItemValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                         Converter="{StaticResource CurrentConfigValueConverter}">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Label Content="{StaticResource LblUnitMetre}" />
                    </WrapPanel>
                </StackPanel>
            </DockPanel>
        </DataTemplate>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <DockPanel Margin="5">
            <Grid DockPanel.Dock="Top" Height="24">
                <Menu Background="{x:Null}" BorderBrush="Black" BorderThickness="0,0,0,1">
                    <MenuItem Name="MenuItemUser" Header="{StaticResource MenuItemUser}" Height="24">
                        <MenuItem Name="MenuItemSignOut" Header="{StaticResource MenuItemSignOut}" Click="SignOut"/>
                        <MenuItem Name="MenuItemExit" Header="{StaticResource MenuItemExit}" Click="Exit"/>
                    </MenuItem>
                    <MenuItem Header="_System" Height="24" Visibility="Collapsed">
                        <MenuItem Name="MenuItemLang" Header="_Language">
                            <MenuItem Name="MenuItemEnglish" Header="English" Click="LanguageChange"/>
                            <MenuItem Name="MenuItemChinese" Header="中文（简体）" Click="LanguageChange"/>
                        </MenuItem>
                        <MenuItem Header="_Help"/>
                        <MenuItem Header="_About"/>
                    </MenuItem>
                </Menu>
            </Grid>
            <Grid DockPanel.Dock="Top">
                <WrapPanel HorizontalAlignment="Left">
                    <Image Source="/SteelWire;component/Resources/Images/Icon.png" Width="60" Height="60" Margin="0,10"/>
                    <StackPanel Margin="0,14">
                        <Label Content="{StaticResource CompanyNameCn}" FontSize="12" HorizontalAlignment="Left" />
                        <Label Content="{StaticResource CompanyNameEn}" FontSize="12" HorizontalAlignment="Left" />
                    </StackPanel>
                    <Label Content="{StaticResource AppTitle}" FontSize="24" FontWeight="Bold" Margin="10,19,0,19" />
                </WrapPanel>
                <Label FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Label.Content>
                        <MultiBinding Converter="{StaticResource WindowTitleConverter}">
                            <Binding Source="{StaticResource Welcome}"/>
                            <Binding Path="UserDisplay.ItemValue" Source="{x:Static windowData:Main.Data}"/>
                        </MultiBinding>
                    </Label.Content>
                </Label>
            </Grid>
            <Expander DockPanel.Dock="Top" BorderBrush="#FFD5DFE5" Background="#FF3598DC" Foreground="White" BorderThickness="0,1,0,0">
                <Expander.Header>
                    <MultiBinding Converter="{StaticResource WindowTitleConverter}" Mode="OneWay">
                        <Binding Source="{StaticResource GroupWirelineCuttingCriticalValueTitle}"/>
                        <Binding Source=" -- "/>
                        <Binding Source="{StaticResource LblWirelineCutLength}"/>
                        <Binding Source="{StaticResource LblUnitMetre}"/>
                        <Binding Path="WirelineCutLengthValue.ItemValue" Source="{StaticResource WindowData}"/>
                        <Binding Source=" -- "/>
                        <Binding Source="{StaticResource LblWirelineCuttingTitle}"/>
                        <Binding Path="WirelineCuttingCriticalValue.ItemValue" Source="{StaticResource WindowData}"/>
                        <Binding Source="{StaticResource LblUnitTonKilometre}"/>
                    </MultiBinding>
                </Expander.Header>
                <Border Margin="0" Background="White" BorderThickness="1,0,1,1" BorderBrush="#FFD5DFE5">
                    <DockPanel Margin="0,0,10,0">
                        <WrapPanel DockPanel.Dock="Top">
                            <WrapPanel Margin="10,20,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblDerrickHeight" Content="{StaticResource LblDerrickHeight}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtDerrickHeight" Width="120" MaxLength="10"
                						InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                                    <Binding Path="DerrickHeight.ItemValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                							Source="{StaticResource WindowData}"
                							Converter="{StaticResource CurrentConfigValueConverter}">
                                        <Binding.ValidationRules>
                                            <validationRule:DecimalValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox>
                                <Label Content="{StaticResource LblUnitMetre}" />
                            </WrapPanel>
                            <WrapPanel Margin="0,20,0,0">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblWirelineCutLength" HorizontalAlignment="Right" Content="{StaticResource LblWirelineCutLength}"/>
                                </Grid>
                                <TextBox x:Name="TxtWirelineCutLengthValue" IsReadOnly="True" Padding="10,5,10,1" BorderThickness="0,0,0,1"
                						FontSize="14" FontWeight="Bold">
                                    <TextBox.Foreground>
                                        <Binding Path="WirelineCutLengthValue.ItemValue"
                                                 Converter="{StaticResource CurrentConfigForeColorConverter}" Mode="OneWay"
                                                 Source="{StaticResource WindowData}" />
                                    </TextBox.Foreground>
                                    <TextBox.Text>
                                        <Binding Path="WirelineCutLengthValue.ItemValue"
                                                 Converter="{StaticResource ReadOnlyResultValueConverter}" Mode="OneWay"
                                                 Source="{StaticResource WindowData}" />
                                    </TextBox.Text>
                                    <TextBox.BorderBrush>
                                        <LinearGradientBrush>
                                            <GradientStop Color="Black"/>
                                        </LinearGradientBrush>
                                    </TextBox.BorderBrush>
                                </TextBox>
                                <Label Content="{StaticResource LblUnitMetre}" FontSize="14" />
                            </WrapPanel>
                        </WrapPanel>
                        <WrapPanel DockPanel.Dock="Top">
                            <WrapPanel Margin="5,20,0,0" Width="325">
                                <Grid Width="130" Margin="0,0,5,0">
                                    <Label x:Name="LblWirelineMaxPower" Content="{StaticResource LblWirelineMaxPower}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtWirelineMaxPower" Width="120" MaxLength="10"
                						InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                                    <TextBox.Text>
                                        <Binding Path="WirelineMaxPower.ItemValue" Converter="{StaticResource CurrentConfigValueConverter}"
                                                 Mode="TwoWay" Source="{StaticResource WindowData}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label Content="{StaticResource LblUnitKilonewton}" />
                            </WrapPanel>
                            <WrapPanel Margin="0,20,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblRotaryHookWorkload" Content="{StaticResource LblRotaryHookWorkload}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtRotaryHookWorkload" Width="120" MaxLength="10"
                						InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                                    <TextBox.Text>
                                        <Binding Path="RotaryHookWorkload.ItemValue" Converter="{StaticResource CurrentConfigValueConverter}"
                                                 Mode="TwoWay" Source="{StaticResource WindowData}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label Content="{StaticResource LblUnitTon}" />
                            </WrapPanel>
                            <WrapPanel Margin="0,20,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblRopeCount" Content="{StaticResource LblRopeCount}" HorizontalAlignment="Right"/>
                                </Grid>
                                <ComboBox x:Name="CboRopeCount" Width="120">
                                    <ComboBox.SelectedValue>
                                        <Binding Path="RopeCount.ItemValue" Mode="TwoWay" Source="{StaticResource WindowData}"
                                                 UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:IntValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </ComboBox.SelectedValue>
                                </ComboBox>
                            </WrapPanel>
                            <WrapPanel Margin="0,20,0,0">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblSecurityCoefficient" HorizontalAlignment="Right" Content="{StaticResource LblSecurityCoefficient}"/>
                                </Grid>
                                <TextBox x:Name="TxtSecurityCoefficientValue" IsReadOnly="True" Padding="10,5,10,1" BorderThickness="0,0,0,1"
                						FontSize="14" FontWeight="Bold">
                                    <TextBox.Foreground>
                                        <Binding Path="SecurityCoefficientValue.ItemValue"
                                                 Converter="{StaticResource CurrentConfigForeColorConverter}" Mode="OneWay"
                                                 Source="{StaticResource WindowData}" />
                                    </TextBox.Foreground>
                                    <TextBox.Text>
                                        <Binding Path="SecurityCoefficientValue.ItemValue"
                                                 Converter="{StaticResource ReadOnlyResultValueConverter}" Mode="OneWay"
                                                 Source="{StaticResource WindowData}" />
                                    </TextBox.Text>
                                    <TextBox.BorderBrush>
                                        <LinearGradientBrush>
                                            <GradientStop Color="Black"/>
                                        </LinearGradientBrush>
                                    </TextBox.BorderBrush>
                                </TextBox>
                            </WrapPanel>
                        </WrapPanel>
                        <WrapPanel DockPanel.Dock="Top">
                            <WrapPanel Margin="10,20,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblRollerDiameter" Content="{StaticResource LblRollerDiameter}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtRollerDiameter" Width="120" MaxLength="10"
                						InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                                    <TextBox.Text>
                                        <Binding Path="RollerDiameter.ItemValue" Converter="{StaticResource CurrentConfigValueConverter}" Mode="TwoWay"
                                                 Source="{StaticResource WindowData}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label Content="{StaticResource LblUnitMillimetre}" />
                            </WrapPanel>
                            <WrapPanel Margin="0,20,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblWirelineDiameter" Content="{StaticResource LblWirelineDiameter}" HorizontalAlignment="Right"/>
                                </Grid>
                                <ComboBox x:Name="CboWirelineDiameter" Width="120">
                                    <ComboBox.SelectedValue>
                                        <Binding Path="WirelineDiameter.ItemValue" Mode="TwoWay" Source="{StaticResource WindowData}"
                                                 UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </ComboBox.SelectedValue>
                                </ComboBox>
                                <Label Content="{StaticResource LblUnitMillimetre}" />
                            </WrapPanel>
                            <WrapPanel Margin="0,20,0,0">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblPulleyCoefficient" HorizontalAlignment="Right" Content="{StaticResource LblPulleyCoefficient}"/>
                                </Grid>
                                <TextBox x:Name="TxtPulleyCoefficientValue" IsReadOnly="True" Padding="10,5,10,1" BorderThickness="0,0,0,1"
                						FontSize="14" FontWeight="Bold">
                                    <TextBox.Foreground>
                                        <Binding Path="PulleyCoefficientValue.ItemValue"
                                                 Converter="{StaticResource CurrentConfigForeColorConverter}" Mode="OneWay"
                                                 Source="{StaticResource WindowData}" />
                                    </TextBox.Foreground>
                                    <TextBox.Text>
                                        <Binding Path="PulleyCoefficientValue.ItemValue"
                                                 Converter="{StaticResource ReadOnlyResultValueConverter}" Mode="OneWay"
                                                 Source="{StaticResource WindowData}" />
                                    </TextBox.Text>
                                    <TextBox.BorderBrush>
                                        <LinearGradientBrush>
                                            <GradientStop Color="Black"/>
                                        </LinearGradientBrush>
                                    </TextBox.BorderBrush>
                                </TextBox>
                            </WrapPanel>
                        </WrapPanel>
                        <DockPanel Margin="0,10">
                            <WrapPanel HorizontalAlignment="Center">
                                <Label x:Name="LblWirelineCuttingTitle" Content="{StaticResource LblWirelineCuttingTitle}" FontSize="14" />
                                <TextBox x:Name="TxtWirelineCuttingValue" IsReadOnly="True" Padding="10,5,10,1" BorderThickness="0,0,0,1"
                						FontSize="14" FontWeight="Bold">
                                    <TextBox.Foreground>
                                        <Binding Path="WirelineCuttingCriticalValue.ItemValue"
                                                 Converter="{StaticResource CurrentConfigForeColorConverter}" Mode="OneWay"
                                                 Source="{StaticResource WindowData}" />
                                    </TextBox.Foreground>
                                    <TextBox.Text>
                                        <Binding Path="WirelineCuttingCriticalValue.ItemValue"
                                                 Converter="{StaticResource ReadOnlyResultValueConverter}" Mode="OneWay"
                                                 Source="{StaticResource WindowData}" />
                                    </TextBox.Text>
                                    <TextBox.BorderBrush>
                                        <LinearGradientBrush>
                                            <GradientStop Color="Black"/>
                                        </LinearGradientBrush>
                                    </TextBox.BorderBrush>
                                </TextBox>
                                <Label Content="{StaticResource LblUnitTonKilometre}" FontSize="14" />
                            </WrapPanel>
                        </DockPanel>
                    </DockPanel>
                </Border>
            </Expander>
            <Expander Header="{StaticResource GroupCommonCoefficientTitle}" DockPanel.Dock="Top"
                      BorderBrush="#FFD5DFE5" Background="#FF3598DC" Foreground="White" Margin="0,2,0,0" BorderThickness="0,1,0,0">
                <Border Margin="0" Background="White" BorderThickness="1,0,1,1" BorderBrush="#FFD5DFE5">
                    <DockPanel Margin="10,0,10,0">
                        <WrapPanel DockPanel.Dock="Top">
                            <WrapPanel Margin="0,20,0,0" Width="335">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblFluidDensity" Content="{StaticResource LblFluidDensity}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtFluidDensity" Width="120" MaxLength="10"
            						InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                                    <TextBox.Text>
                                        <Binding Path="FluidDensity.ItemValue" Converter="{StaticResource CurrentConfigValueConverter}" Mode="TwoWay"
                                                 Source="{StaticResource WindowData}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label Content="{StaticResource LblUnitKilogramPerCubicMeter}" />
                            </WrapPanel>
                            <WrapPanel Margin="0,20,0,0" Width="305">
                                <Grid Width="110" Margin="0,0,5,0">
                                    <Label x:Name="LblElevatorWeight" Content="{StaticResource LblElevatorWeight}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtElevatorWeight" Width="120" MaxLength="10"
            						InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent">
                                    <TextBox.Text>
                                        <Binding Path="ElevatorWeight.ItemValue" Converter="{StaticResource CurrentConfigValueConverter}" Mode="TwoWay"
                                                 Source="{StaticResource WindowData}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label Content="{StaticResource LblUnitKilogram}" />
                            </WrapPanel>
                        </WrapPanel>
                        <WrapPanel Margin="0,0,0,10">
                            <ListView x:Name="ListViewDrillPipes"
            					Template="{StaticResource ListViewTemplate}"
            					ItemTemplate="{StaticResource ListViewItemTemplate2}"
            					ItemContainerStyle="{StaticResource ListViewItemContainerStyle}" Margin="0,10,0,0">
                                <ListView.ItemsSource>
                                    <Binding Path="DrillPipes.DrillPipes.Items" Mode="OneWay" Source="{StaticResource WindowData}"
                                             UpdateSourceTrigger="PropertyChanged" />
                                </ListView.ItemsSource>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                            <ListView x:Name="ListViewHeavierDrillPipes"
            					Template="{StaticResource ListViewTemplate}"
            					ItemTemplate="{StaticResource ListViewItemTemplate}"
            					ItemContainerStyle="{StaticResource ListViewItemContainerStyle}" Margin="0,10,0,0">
                                <ListView.ItemsSource>
                                    <Binding Path="DrillPipes.HeavierDrillPipes.Items" Mode="OneWay" Source="{StaticResource WindowData}"
                                             UpdateSourceTrigger="PropertyChanged" />
                                </ListView.ItemsSource>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                            <ListView x:Name="ListViewDrillCollars"
            					Template="{StaticResource ListViewTemplate}"
            					ItemTemplate="{StaticResource ListViewItemTemplate}"
            					ItemContainerStyle="{StaticResource ListViewItemContainerStyle}" Margin="0,10,0,0">
                                <ListView.ItemsSource>
                                    <Binding Path="DrillCollars.Items" Mode="OneWay" Source="{StaticResource WindowData}"
                                             UpdateSourceTrigger="PropertyChanged" />
                                </ListView.ItemsSource>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                        </WrapPanel>
                    </DockPanel>
                </Border>
            </Expander>
            <UniformGrid DockPanel.Dock="Top" VerticalAlignment="Top" Rows="1" Columns="4" Margin="0,5,0,0">
                <GroupBox Header="{StaticResource GroupDrillingWorkTitle}">
                    <DockPanel>
                        <Grid DockPanel.Dock="Bottom" Margin="0,20,0,10">
                            <WrapPanel HorizontalAlignment="Center" Margin="0">
                                <Label x:Name="LblDrillingTitle" Content="{StaticResource LblValueTitle}" FontSize="14" />
                                <TextBox x:Name="TxtDrillingValue" IsReadOnly="True" Padding="10,5,10,1" BorderThickness="0,0,0,1" FontSize="14" FontWeight="Bold">
                                    <TextBox.BorderBrush>
                                        <LinearGradientBrush>
                                            <GradientStop Color="Black"/>
                                        </LinearGradientBrush>
