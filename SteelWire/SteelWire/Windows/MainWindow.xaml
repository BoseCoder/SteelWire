<Window x:Name="WindowMain" x:Class="SteelWire.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:data="clr-namespace:SteelWire.AppCode.Data"
        xmlns:converter="clr-namespace:SteelWire.AppCode.Converter"
        xmlns:validationRule="clr-namespace:SteelWire.AppCode.ValidationRule"
        xmlns:windowData="clr-namespace:SteelWire.WindowData"
        DataContext="{DynamicResource WindowDataKey}"
        MinWidth="1200" MinHeight="600" Width="1670" Height="840" WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Icon="/SteelWire;component/Resources/Images/Icon.ico" ContentRendered="WindowRendered" Closing="WindowOnClosing">
    <Window.Resources>
        <windowData:Main x:Key="WindowDataKey"></windowData:Main>
        <converter:TimeMeterTextConverter x:Key="TimeMeterConverter" />
        <converter:CurrentConfigItemTextConverter x:Key="CurrentConfigValueConverter" />
        <converter:ReadOnlyResultTextConverter x:Key="ReadOnlyResultValueConverter" />
        <converter:CurrentConfigItemForeColorConverter x:Key="CurrentConfigForeColorConverter" />
        <converter:CumulationItemForeColorConverter x:Key="CumulationForeColorConverter" />
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Background" Value="Red" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="BorderThickness" Value="0"></Setter>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self},Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type ListViewItem}" x:Key="ListViewItemContainerStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border BorderThickness="0" >
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <ControlTemplate x:Key="ListViewTemplate" TargetType="{x:Type ListView}">
            <WrapPanel>
                <ItemsPresenter />
            </WrapPanel>
        </ControlTemplate>
        <DataTemplate x:Key="ListViewItemTemplate">
            <DockPanel Width="280" Margin="20,0,20,0">
                <Grid DockPanel.Dock="Left" Width="10">
                    <Image Source="..\Resources\Images\DrillLeft.png" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                </Grid>
                <Grid DockPanel.Dock="Right" Width="10">
                    <Image Source="..\Resources\Images\DrillRight.png" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                </Grid>
                <StackPanel>
                    <Grid>
                        <Label x:Name="LblName" HorizontalAlignment="Center" FontWeight="Bold">
                            <Label.Content>
                                <Binding Path="Value.LocalName.Value" Mode="OneWay" />
                            </Label.Content>
                        </Label>
                    </Grid>
                    <WrapPanel Margin="0,10,0,0">
                        <Grid Width="95" Margin="0,0,5,0">
                            <Label x:Name="LblWeight" HorizontalAlignment="Right">
                                <Label.Content>
                                    <Binding Path="Value.WeightTitle.Value" Mode="OneWay" />
                                </Label.Content>
                            </Label>
                        </Grid>
                        <TextBox x:Name="TxtWeight" Width="100" MaxLength="10" InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                            <TextBox.Text>
                                <Binding Path="Value.Weight.Value" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                         Converter="{StaticResource CurrentConfigValueConverter}">
                                    <Binding.ValidationRules>
                                        <validationRule:DecimalValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Label>
                            <Binding Path="Value" Source="{x:Static data:UnitData.KilogramPerMetre}"></Binding>
                        </Label>
                    </WrapPanel>
                    <WrapPanel Margin="0,10,0,0">
                        <Grid Width="95" Margin="0,0,5,0">
                            <Label x:Name="LblLength" HorizontalAlignment="Right">
                                <Label.Content>
                                    <Binding Path="Value.LengthTitle.Value" Mode="OneWay" />
                                </Label.Content>
                            </Label>
                        </Grid>
                        <TextBox x:Name="Txtength" Width="100" MaxLength="10" InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                            <TextBox.Text>
                                <Binding Path="Value.Length.Value" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                         Converter="{StaticResource CurrentConfigValueConverter}">
                                    <Binding.ValidationRules>
                                        <validationRule:DecimalValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Label>
                            <Binding Path="Value" Source="{x:Static data:UnitData.Metre}"></Binding>
                        </Label>
                    </WrapPanel>
                </StackPanel>
            </DockPanel>
        </DataTemplate>
        <ControlTemplate x:Key="HistoryViewTemplate" TargetType="{x:Type ListView}">
            <StackPanel>
                <ItemsPresenter />
            </StackPanel>
        </ControlTemplate>
        <DataTemplate x:Key="HistoryViewItemTemplate">
            <Label HorizontalAlignment="Left">
                <Label.Content>
                    <Binding Path="Value.Text.Value" Mode="OneWay" />
                </Label.Content>
            </Label>
        </DataTemplate>
    </Window.Resources>
    <Window.Title>
        <Binding Path="WindowTitle.Value" Source="{StaticResource WindowDataKey}"></Binding>
    </Window.Title>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <DockPanel Margin="5">
            <Grid DockPanel.Dock="Top" Height="24">
                <Menu Background="{x:Null}" BorderBrush="Black" BorderThickness="0,0,0,1">
                    <MenuItem Name="MenuItemUser" Header="{DynamicResource MenuItemUser}" Height="24">
                        <MenuItem Name="MenuItemSignOut" Header="{DynamicResource MenuItemSignOut}" Click="SignOut"/>
                        <MenuItem Name="MenuItemExit" Header="{DynamicResource MenuItemExit}" Click="Exit"/>
                    </MenuItem>
                    <MenuItem Name="MenuItemReport" Header="{DynamicResource MenuItemReport}" Height="24">
                        <MenuItem Name="MenuItemReportCut" Header="{DynamicResource MenuItemReportCut}" Click="OpenReportCut"/>
                    </MenuItem>
                    <MenuItem Name="MenuItemSystem" Header="{DynamicResource MenuItemSystem}" Height="24">
                        <MenuItem Header="{DynamicResource MenuItemOption}" Click="OpenOption"/>
                        <MenuItem Header="_Help" Visibility="Collapsed"/>
                        <MenuItem Header="_About" Visibility="Collapsed"/>
                    </MenuItem>
                </Menu>
            </Grid>
            <Grid DockPanel.Dock="Top">
                <WrapPanel HorizontalAlignment="Left">
                    <Image Source="/SteelWire;component/Resources/Images/Icon.png" Width="60" Height="60" Margin="0,10"/>
                    <StackPanel Margin="0,14">
                        <Label Content="{DynamicResource CompanyNameCn}" FontSize="12" HorizontalAlignment="Left" />
                        <Label Content="{DynamicResource CompanyNameEn}" FontSize="12" HorizontalAlignment="Left" />
                    </StackPanel>
                    <Label Content="{DynamicResource AppTitle}" FontSize="24" FontWeight="Bold" Margin="10,19,0,19" />
                </WrapPanel>
                <Label FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Label.Content>
                        <Binding Path="WelcomeText.Value" Source="{StaticResource WindowDataKey}"></Binding>
                    </Label.Content>
                </Label>
            </Grid>
            <Expander Header="{DynamicResource GroupWirelineCuttingCriticalValueTitle}" DockPanel.Dock="Top" BorderBrush="#FFD5DFE5" Background="#FF3598DC" Foreground="White" BorderThickness="0,1,0,0" IsExpanded="True" Focusable="False">
                <Border Margin="0" Background="White" BorderThickness="1,0,1,1" BorderBrush="#FFD5DFE5" Focusable="False">
                    <DockPanel Margin="0,10,10,10">
                        <WrapPanel DockPanel.Dock="Top">
                            <WrapPanel Margin="10,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblDerrickHeight" Content="{DynamicResource LblDerrickHeight}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtDerrickHeight" Width="120" MaxLength="10" InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <Binding Path="DerrickHeight.Value" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                							Source="{StaticResource WindowDataKey}"
                							Converter="{StaticResource CurrentConfigValueConverter}">
                                        <Binding.ValidationRules>
                                            <validationRule:DecimalValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox>
                                <Label>
                                    <Binding Path="Value" Source="{x:Static data:UnitData.Metre}"></Binding>
                                </Label>
                            </WrapPanel>
                            <WrapPanel Margin="0,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblDrillingType" Content="{DynamicResource LblDrillingType}" HorizontalAlignment="Right"/>
                                </Grid>
                                <ComboBox x:Name="CboDrillingType" Width="120" SelectedValuePath="Key" DisplayMemberPath="Value.Value">
                                    <ComboBox.SelectedValue>
                                        <Binding Path="DrillingType.Value" Mode="TwoWay" Source="{StaticResource WindowDataKey}"
                                             UpdateSourceTrigger="PropertyChanged" />
                                    </ComboBox.SelectedValue>
                                </ComboBox>
                            </WrapPanel>
                            <WrapPanel Margin="0,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblElevatorWeight" Content="{DynamicResource LblElevatorWeight}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtElevatorWeight" Width="120" MaxLength="10" InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <TextBox.Text>
                                        <Binding Path="ElevatorWeight.Value" Converter="{StaticResource CurrentConfigValueConverter}" Mode="TwoWay"
                                                 Source="{StaticResource WindowDataKey}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label>
                                    <Binding Path="Value" Source="{x:Static data:UnitData.Kilogram}"></Binding>
                                </Label>
                            </WrapPanel>
                            <WrapPanel Margin="0,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblRollerDiameter" Content="{DynamicResource LblRollerDiameter}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtRollerDiameter" Width="120" MaxLength="10" InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <TextBox.Text>
                                        <Binding Path="RollerDiameter.Value" Converter="{StaticResource CurrentConfigValueConverter}" Mode="TwoWay"
                                                 Source="{StaticResource WindowDataKey}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label>
                                    <Binding Path="Value" Source="{x:Static data:UnitData.Millimetre}"></Binding>
                                </Label>
                            </WrapPanel>
                        </WrapPanel>
                        <WrapPanel DockPanel.Dock="Top" Margin="0,10,0,0">
                            <WrapPanel Margin="5,0,0,0" Width="325">
                                <Grid Width="130" Margin="0,0,5,0">
                                    <Label x:Name="LblWirelineMaxPower" Content="{DynamicResource LblWirelineMaxPower}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtWirelineMaxPower" Width="120" MaxLength="10" InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <TextBox.Text>
                                        <Binding Path="WirelineMaxPower.Value" Converter="{StaticResource CurrentConfigValueConverter}"
                                                 Mode="TwoWay" Source="{StaticResource WindowDataKey}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label>
                                    <Binding Path="Value" Source="{x:Static data:UnitData.Kilonewton}"></Binding>
                                </Label>
                            </WrapPanel>
                            <WrapPanel Margin="0,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblRotaryHookWorkload" Content="{DynamicResource LblRotaryHookWorkload}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtRotaryHookWorkload" Width="120" MaxLength="10" InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <TextBox.Text>
                                        <Binding Path="RotaryHookWorkload.Value" Converter="{StaticResource CurrentConfigValueConverter}"
                                                 Mode="TwoWay" Source="{StaticResource WindowDataKey}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label>
                                    <Binding Path="Value" Source="{x:Static data:UnitData.Kilonewton}"></Binding>
                                </Label>
                            </WrapPanel>
                            <WrapPanel Margin="0,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblRopeCount" Content="{DynamicResource LblRopeCount}" HorizontalAlignment="Right"/>
                                </Grid>
                                <ComboBox x:Name="CboRopeCount" Width="120">
                                    <ComboBox.SelectedValue>
                                        <Binding Path="RopeCount.Value" Mode="TwoWay" Source="{StaticResource WindowDataKey}"
                                                 UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:IntValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </ComboBox.SelectedValue>
                                </ComboBox>
                            </WrapPanel>
                            <WrapPanel Margin="0,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblWirelineDiameter" Content="{DynamicResource LblWirelineDiameter}" HorizontalAlignment="Right"/>
                                </Grid>
                                <ComboBox x:Name="CboWirelineDiameter" Width="120" DisplayMemberPath="Value.Name" SelectedValuePath="Value.Name">
                                    <ComboBox.ItemsSource>
                                        <Binding Path="WireropeWorkloadCollection.Items" Mode="OneWay" Source="{StaticResource WindowDataKey}"></Binding>
                                    </ComboBox.ItemsSource>
                                    <ComboBox.SelectedValue>
                                        <Binding Path="Diameter.Value" Mode="TwoWay" Source="{x:Static data:GlobalData.Wireline}"
                                                 UpdateSourceTrigger="PropertyChanged">
                                        </Binding>
                                    </ComboBox.SelectedValue>
                                </ComboBox>
                                <Label>
                                    <Binding Path="Value" Source="{x:Static data:UnitData.Millimetre}"></Binding>
                                </Label>
                            </WrapPanel>
                        </WrapPanel>
                        <WrapPanel DockPanel.Dock="Top" Margin="0,10,0,0">
                            <WrapPanel Margin="10,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblWireLineStruct" Content="{DynamicResource LblWireLineStruct}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtWireLineStruct" Width="120" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <TextBox.Text>
                                        <Binding Path="Struct.Value" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                							Source="{x:Static data:GlobalData.Wireline}">
                                            <Binding.ValidationRules>
                                                <validationRule:StringValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </WrapPanel>
                            <WrapPanel Margin="0,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblWireLineStrongLevel" Content="{DynamicResource LblWireLineStrongLevel}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtWireLineStrongLevel" Width="120" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <TextBox.Text>
                                        <Binding Path="StrongLevel.Value" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                							Source="{x:Static data:GlobalData.Wireline}">
                                            <Binding.ValidationRules>
                                                <validationRule:StringValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </WrapPanel>
                            <WrapPanel Margin="0,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblWireLineTwistDirection" Content="{DynamicResource LblWireLineTwistDirection}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtWireLineTwistDirection" Width="120" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <TextBox.Text>
                                        <Binding Path="TwistDirection.Value" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                							Source="{x:Static data:GlobalData.Wireline}">
                                            <Binding.ValidationRules>
                                                <validationRule:StringValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </WrapPanel>
                            <WrapPanel Margin="0,0,0,0" Width="320">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblWireLineOrderLength" Content="{DynamicResource LblWireLineOrderLength}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtWireLineOrderLength" Width="120" MaxLength="10" InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <TextBox.Text>
                                        <Binding Path="OrderLength.Value" Converter="{StaticResource CurrentConfigValueConverter}"
                                                 Mode="TwoWay" Source="{x:Static data:GlobalData.Wireline}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label>
                                    <Binding Path="Value" Source="{x:Static data:UnitData.Metre}"></Binding>
                                </Label>
                            </WrapPanel>
                        </WrapPanel>
                    </DockPanel>
                </Border>
            </Expander>
            <Expander Header="{DynamicResource GroupCommonCoefficientTitle}" DockPanel.Dock="Top" BorderBrush="#FFD5DFE5" Background="#FF3598DC" 
                      Foreground="White" Margin="0,2,0,0" BorderThickness="0,1,0,0" IsExpanded="True" Focusable="False">
                <Border Margin="0" Background="White" BorderThickness="1,0,1,1" BorderBrush="#FFD5DFE5" Focusable="False">
                    <DockPanel Margin="10,0,10,0">
                        <WrapPanel Margin="0,0,0,10">
                            <ListView x:Name="ListViewDrillPipes" Focusable="False"
            					Template="{DynamicResource ListViewTemplate}"
            					ItemTemplate="{DynamicResource ListViewItemTemplate}"
            					ItemContainerStyle="{DynamicResource ListViewItemContainerStyle}" Margin="0,10,0,0">
                                <ListView.ItemsSource>
                                    <Binding Path="DrillPipes.Items" Mode="OneWay" Source="{StaticResource WindowDataKey}"
                                             UpdateSourceTrigger="PropertyChanged" />
                                </ListView.ItemsSource>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                            <ListView x:Name="ListViewHeavierDrillPipes" Focusable="False"
            					Template="{DynamicResource ListViewTemplate}"
            					ItemTemplate="{DynamicResource ListViewItemTemplate}"
            					ItemContainerStyle="{DynamicResource ListViewItemContainerStyle}" Margin="0,10,0,0">
                                <ListView.ItemsSource>
                                    <Binding Path="HeavierDrillPipes.Items" Mode="OneWay" Source="{StaticResource WindowDataKey}"
                                             UpdateSourceTrigger="PropertyChanged" />
                                </ListView.ItemsSource>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                            <ListView x:Name="ListViewDrillCollars" Focusable="False"
            					Template="{DynamicResource ListViewTemplate}"
            					ItemTemplate="{DynamicResource ListViewItemTemplate}"
            					ItemContainerStyle="{DynamicResource ListViewItemContainerStyle}" Margin="0,10,0,0">
                                <ListView.ItemsSource>
                                    <Binding Path="DrillCollars.Items" Mode="OneWay" Source="{StaticResource WindowDataKey}"
                                             UpdateSourceTrigger="PropertyChanged" />
                                </ListView.ItemsSource>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                            <ListView x:Name="ListViewBushing" Focusable="False"
            					Template="{DynamicResource ListViewTemplate}"
            					ItemTemplate="{DynamicResource ListViewItemTemplate}"
            					ItemContainerStyle="{DynamicResource ListViewItemContainerStyle}" Margin="0,10,0,0">
                                <ListView.ItemsSource>
                                    <Binding Path="Bushings.Items" Mode="OneWay" Source="{StaticResource WindowDataKey}"
                                             UpdateSourceTrigger="PropertyChanged" />
                                </ListView.ItemsSource>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                        </WrapPanel>
                    </DockPanel>
                </Border>
            </Expander>
            <Grid DockPanel.Dock="Top" Margin="0,5,0,0">
                <Border Margin="0" Background="White" BorderThickness="1,1,1,1" BorderBrush="#FFD5DFE5" Focusable="False">
                    <StackPanel Margin="0,0,0,0">
                        <Label DockPanel.Dock="Top" Content="{DynamicResource LblOperationProcessCalculation}" Background="#FF3598DC" Foreground="White">
                        </Label>
                        <WrapPanel DockPanel.Dock="Top" Margin="0,10,0,10">
                            <WrapPanel Margin="49,0,0,0">
                                <Grid Width="125" Margin="0,0,5,0">
                                    <Label x:Name="LblFluidDensity" Content="{DynamicResource LblFluidDensity}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtFluidDensity" Width="120" MaxLength="10" InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <TextBox.Text>
                                        <Binding Path="FluidDensity.Value" Converter="{StaticResource CurrentConfigValueConverter}" Mode="TwoWay"
                                                 Source="{StaticResource WindowDataKey}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label>
                                    <Binding Path="Value" Source="{x:Static data:UnitData.GramPerCubicCentimetre}"></Binding>
                                </Label>
                            </WrapPanel>
                            <WrapPanel Margin="40,0,0,0">
                                <Grid Margin="0,0,5,0">
                                    <Label x:Name="LblRealRotaryHookWorkload" Content="{DynamicResource LblRealRotaryHookWorkload}" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBox x:Name="TxtRealRotaryHookWorkload" Width="120" MaxLength="10" InputMethod.IsInputMethodEnabled="False" PreviewKeyDown="DecimalBoxPreviewKeyDownEvent" GotKeyboardFocus="NumericBoxGotKeyboardFocusEvent">
                                    <TextBox.Text>
                                        <Binding Path="RealRotaryHookWorkload.Value" Converter="{StaticResource CurrentConfigValueConverter}"
                                                 Mode="TwoWay" Source="{StaticResource WindowDataKey}" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <validationRule:DecimalValidationRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Label>
                                    <Binding Path="Value" Source="{x:Static data:UnitData.Kilonewton}"></Binding>
                                </Label>
                            </WrapPanel>
                        </WrapPanel>
                        <UniformGrid DockPanel.Dock="Top" VerticalAlignment="Top" Rows="1" Columns="4" Margin="0,5,0,0">
                            <GroupBox Header="{DynamicResource GroupDrillingWorkTitle}">
                                <DockPanel Margin="0,10,0,10">
                                    <Grid DockPanel.Dock="Bottom" Margin="0,10,0,0">
                                        <WrapPanel HorizontalAlignment="Center" Margin="0">
                                            <Label x:Name="LblDrillingTitle" Content="{DynamicResource LblValueTitle}" FontSize="14" />
                                            <TextBox x:Name="TxtDrillingValue" IsReadOnly="True" Padding="10,5,10,0" BorderThickness="0,0,0,1" FontSize="14" FontWeight="Bold" Focusable="False">
                                                <TextBox.BorderBrush>
                                                    <LinearGradientBrush>
                                                        <GradientStop Color="Black"/>
                                                    </LinearGradientBrush>
                                                </TextBox.BorderBrush>
                                                <TextBox.Text>
                                                    <Binding Path="DrillingWorkValue.Value" Converter="{StaticResource ReadOnlyResultValueConverter}"
                                             Mode="OneWay" Source="{StaticResource WindowDataKey}" />
                                                </TextBox.Text>
                                                <TextBox.Foreground>
                                                    <Binding Path="DrillingWorkValue.Value" Converter="{StaticResource CurrentConfigForeColorConverter}"
                                             Mode="OneWay" Source="{StaticResource WindowDataKey}" />
                                                </TextBox.Foreground>
                                            </TextBox>
                                            <Label>
                                                <Binding Path="Value" Source="{x:Static data:UnitData.TonKilometre}"></Binding>
                                            </Label>
                                        </WrapPanel>
                                    </Grid>
                                    <StackPanel>
                                        <WrapPanel Margin="0,0,0,0" Width="300" HorizontalAlignment="Center">
                                            <Grid Width="120" Margin="0,0,5,0">
                                                <Label x:Name="LblDrillingShallowHeight" Content="{DynamicResource LblShallowHeight}" HorizontalAlignment="Right"/>
